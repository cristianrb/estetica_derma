import Service from "@/components/Service.astro";
import MapWrapper from "@/components/MapWrapper.astro";
import Gallery from "@/components/Gallery.astro";
import NavMobile from "@/components/NavMobile";
import InstagramIcon from "@/components/icons/InstagramIcon.astro";
import WhatsAppButton from "@/components/WhatsAppButton.astro";
import Modal from "@/components/Modal";
import FirmasLogos from "@/components/FirmasLogos";
import CookiesBanner from "@/components/CookiesBanner";
import Footer from "@/components/Footer.astro";
import { useTranslations } from "@/i18n/utils";
import LanguageSelector from "@/components/LanguageSelector";

const images = [
  {
    path: "./images/Limpieza-facial-profunda.jpg",
    alt: "Limpieza facial profunda",
  },
  {
    path: "./images/beauty-face-massage-56884.jpg",
    alt: "Belleza masaje de cara",
  },
  {
    path: "./images/7eb0dcf310238450490b27502631cb48.jpg",
    alt: "Masaje de chocolate",
  },
];

const images2 = [
  {
    path: "./images/Limpieza-facial-profunda.jpg",
    alt: "Limpieza facial profunda",
  },
  {
    path: "./images/beauty-face-massage-56884.jpg",
    alt: "Belleza masaje de cara",
  },
  {
    path: "./images/7eb0dcf310238450490b27502631cb48.jpg",
    alt: "Masaje de chocolate",
  },
  {
    path: "./images/estetica-facial-barcelona-maxilodexeus.jpg",
    alt: "Cara de mujer maxilofacial",
  },
  {
    path: "./images/medicina-estetica-mujer-1024x492.jpg",
    alt: "Mujer haciendose tratamiento de estetica",
  },
];

export async function getStaticPaths() {
  const pages = [
    {
      lang: "en",
    },
    {
      lang: "de",
    },
    {
      lang: "fr",
    },
    {
      lang: "es",
    },
    {
      lang: "ca",
    },
  ];
  return pages.map(({ lang }) => {
    return {
      params: { lang },
    };
  });
}

let t = useTranslations("es");
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Estetica Derma - Centro de estÃ©tica facial, corporal y SPA"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mr+De+Haviland&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script is:inline src="https://unpkg.com/leaflet/dist/leaflet.js" defer
    ></script>
    <title>Estetica Derma</title>
  </head>
  <body data-translation={t}>
    <Modal title={t("popup.bono.regalo")} client:load>
      <p class="text-sm lg:text-lg font-inter">{t("popup.bono")}</p>
      <p class="text-sm lg:text-lg font-inter">
        <a class="text-rose-400" href="https://wa.me/34691310652"
          >{t("popup.contact")}</a
        >
        {t("popup.more_info")}
      </p>
    </Modal>
    <main class="flex flex-col items-center">
      <section
        class="hidden lg:flex lg:relative flex-col-reverse justify-between lg:flex-col"
      >
        <div class="opacity-50 w-full">
          <CarouselWrapper images={images} client:load />
        </div>
        <nav
          class="flex justify-around items-center px-6 lg:absolute lg:top-[0.1rem] lg:right-1/2 lg:translate-x-1/2 lg:translate-y-1/2 lg:flex py-2 mt-2 gap-8"
        >
          <Logo title="Derma" subtitle={t("logo.subtitle")} />
          <NavMenu
            routes={[
              { label: t("routes.home"), href: "#home" },
              { label: t("routes.services"), href: "#servicios" },
              { label: t("routes.gallery"), href: "#galeria" },
              { label: t("routes.ubication"), href: "#ubicacion" },
            ]}
            client:visible
          />
          <InstagramIcon />
          <LanguageSelector lang={"es"} client:load />
        </nav>
      </section>

      <nav
        class="lg:hidden sticky top-0 bg-rose-50 shadow w-full z-20 flex justify-around items-center p-4 gap-4"
      >
        <Logo title="Derma" subtitle={t("logo.subtitle")} />
        <InstagramIcon />
        <NavMobile
          routes={[
            { label: t("routes.home"), href: "#home" },
            { label: t("routes.services"), href: "#servicios" },
            { label: t("routes.gallery"), href: "#galeria" },
            { label: t("routes.ubication"), href: "#ubicacion" },
          ]}
          client:visible
        />
        <LanguageSelector lang={"es"} client:load />
      </nav>
      <div class="lg:hidden w-full">
        <CarouselWrapper images={images} client:load />
      </div>

      <section
        id="home"
        class="flex flex-col items-center justify-center px-10 mt-10"
      >
        <TitlePage title={t("home.title")} subtitle={t("home.subtitle")} />
        <p class="mt-2 font-inter font-light text-xl text-center lg:text-2xl">
          {t("home.p1")}
        </p>
        <p
          class="mt-2 font-inter font-light text-xl text-center lg:text-2xl lg:text-2xl"
        >
          {t("home.p2")}
        </p>
