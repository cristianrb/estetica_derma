---
interface Props {
  title: string
  subtitle: string
}

const { title, subtitle } = Astro.props;
---

<h1 class="text-5xl font-haviland text-rose-300">{title}</h1>
<h2 class="text-5xl font-thin mt-2">{subtitle}</h2>
<hr class="w-1/2 h-1 my-8 bg-gray-200 border-0 rounded bg-gradient-to-r from-fuchsia-100 via-fuchsia-400 to-pink-700">