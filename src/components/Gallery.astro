---
interface Props {
  images: Image[];
}

interface Image {
  path: string;
  alt: string;
}

const { images } = Astro.props;
---

<div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
  {
    images.map((image) => (
      <div>
        <div>
          <img
            class="h-auto max-w-full rounded-lg hover:scale-150 hover:transition hover:duration-1000 duration-1000"
            src={image.path}
            alt=""
          />
        </div>
      </div>
    ))
  }
</div>
