---
interface Props {
  src: string
  alt: string
  title: string
  items: string[]
}

const {src, alt, title, items} = Astro.props
---
  <div class="flex flex-col items-center">
    <div class="flex flex-col items-center">
      <img src={src} alt={alt} width="64px">
      <h2 class="text-3xl font-thin my-6">{title}</h2>
    </div>
    <ul class="list-disc">
      {
        items.map((item) => <li class="font-inter font-light">{item}</li>)
      }
    </ul>
  </div>